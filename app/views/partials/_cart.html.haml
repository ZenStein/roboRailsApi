#gridSystemModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "gridModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        %h4#gridModalLabel.modal-title Shopping Cart
      .modal-body
        .container-fluid.bd-example-row
          .row.cart-header
            .col-xs-1.col-xs-offset-1
            .col-xs-1 quant
            .col-xs-5 name
            .col-xs-2 price
        - items.each do |item|
          .row
            .col-xs-1.col-xs-offset-1
              = link_to(raw('&times;'), shopping_cart_item_path(cart, item), method: "delete")          
            .col-xs-1 
              = item.quantity
            .col-xs-5.text-xs-center 
              = item.name
            .col-xs-2.fnt-bold.text-danger
              = item.price
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Continue Shopping
        %button.btn.btn-primary{:type => "button"} Checkout

