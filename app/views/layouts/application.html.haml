%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Shoppe
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application', debug: true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-dark.bg-inverse
      %button.navbar-toggler.hidden-sm-up{"data-target" => "#exCollapsingNavbar2", "data-toggle" => "collapse", :type => "button"}
        â˜°
      #exCollapsingNavbar2.collapse.navbar-toggleable-xs
        %a.navbar-brand{:href => "#"}
          %span.fa.fa-chevron-left
          %span.fa.fa-chevron-left
        %ul.nav.navbar-nav.pull-left
          %li.nav-item.dropdown
            = link_to 'Go!', '#', {:class => "dropdown-toggle nav-link text-info", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :role => "button"} 
            .dropdown-menu
              %a.dropdown-item{:href => "#"} Action
              %a.dropdown-item{:href => "#"} Another action
              %a.dropdown-item{:href => "#"} Something else here
              .dropdown-divider
              %a.dropdown-item{:href => "#"} Separated link





        %ul.nav.navbar-nav.pull-right
          %li.nav-item.active
            = link_to raw(home_glyph), root_path, :class =>  'nav-link'
          - if current_user
            %li.nav-item
              %a.nav-link{:href => "/users/#{current_user.id}"}
                %span.glyphicon.glyphicon-user{"aria-hidden" => "true"}
            %li.nav-item
              = link_to raw(user_glyph), user_path(current_user.id), {:class => 'nav-link'}                
            %li.nav-item
              = link_to raw(shopping_cart_glyph), '#',{:id => 'cart_modal_btn', :class => 'nav-link'} 
            %li.nav-item
              = link_to raw(sign_out_glyph), sessions_path, {method: :delete, :class => 'nav-link'}
          - else
            %li.nav-item
              %a.nav-link.text-success{:href => "/users/new"} SignUp!
            %li.nav-item
              = link_to raw(sign_in_glyph), sessions_new_path, {:class => 'nav-link'}
          / if there is a session id then display user info
      / /.navbar-collapse
  .container 
    =yield



