.jumbotron.jumbotron-fluid
  .container
    %h1.display-3 
      = @category.name
    %p.lead
    - if is_admin?  
      %span.nav-item.dropdown.pull-right
        %a.dropdown-toggle.text-info{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"} Admin Controls
        .dropdown-menu
          %a.dropdown-item{:href => "#"} Action
          %a.dropdown-item{:href => "#"} Another action
          %a.dropdown-item{:href => "#"} Something else here
          .dropdown-divider
          = link_to('Send Email',test_email_path, {:class => "dropdown-item"})
          = link_to('Add Item', new_category_item_path(@category.id), {:class => 'text-success dropdown-item'})
.row
  - @category.items.each do |x|
    .col-xs-8.col-xs-offset-2.col-sm-4.col-sm-offset-0
      %figure.figure.text-center
        %a{:href => category_item_path(@category.id, x.id)} 
          = image_tag("holder.jpg", style: "width:100%; height:100%", alt: "Edit Entry")
        %h1.display-4.category-name
          = x.name.length > 10 ? x.name.slice!(0, 10).insert(-1,'..') : x.name

