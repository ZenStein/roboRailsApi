%h1 Edit Your Item!
= form_for [@category, @item], :html => {:class => " form-horizontal"} do |f|
  %fieldset.form-group
    = f.label :name, class: "col-md-4 control-label"
    .col-md-6
      = f.text_field :name, class: "form-control"
  %fieldset.form-group
    = f.label :description, class: "col-md-4 control-label"
    .col-md-6
      = f.text_field :description, class: "form-control"
  %fieldset.form-group
    = f.label :price, class: "col-md-4 control-label"
    .col-md-6
      = f.text_field :price, class: "form-control"
  %fieldset.form-group
    = f.label :quantity, class: "col-md-4 control-label"
    .col-md-6
      = f.text_field :quantity, class: "form-control"
  %fieldset.form-group
    = f.label :image_url, class: "col-md-4 control-label"
    .col-md-6
      = f.text_field :image_url, class: "form-control"
  %fieldset.form-group
    = f.label :categories, "Product Categories: (hold CTRL on Windows or command on Mac to select more than one", class: "col-md-4 control-label"
    .col-md-8
    = select_tag(:category_ids, options_for_select(Category.pluck(:name), :selected => @item.categories.pluck(:name)), multiple: true, class: "form-control")

    / = select_tag("category_ids[]", option_for_select(Category.all.collect { |category| [category.name, category.id] }, @item.categories.collect { |category| category_id }), {multiple: true, class: "form-control"})



  .color
  = f.submit
